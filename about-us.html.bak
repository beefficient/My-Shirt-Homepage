<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>About Us — My Shirt Printing</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>
    :root{
      --bg: #f6fbff;
      --sky: #eaf4ff;
      --card: #ffffff;
      --text: #0f2a33;
      --muted: #47606a;
      --border: #d7e7f7;
      --primary: #032d44;
      --primary-2: #0b3f5b;
      --pill: 999px;
      --radius: 16px;
      --shadow: 0 10px 24px rgba(10,35,45,.08);
      --max: 1120px;
    }
    *{box-sizing:border-box}
    html,body{margin:0;padding:0}
    body{
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      color: var(--text);
      background: linear-gradient(#ffffff, #ffffff);
      line-height: 1.55;
    }
    a{color:inherit;text-decoration:none}
    img{max-width:100%;display:block}
    .container{max-width:var(--max);margin:0 auto;padding:0 20px}

    /* Top Nav */
    header{
      position: sticky;
      top: 0;
      z-index: 50;
      background: rgba(255,255,255,.9);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
    }
    .navwrap{
      position: relative;
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:16px;
      padding:14px 0;
    }
    .brand{
      display:flex;
      align-items:center;
      gap:12px;
      min-width: 220px;
    }
    .brand img{
      height: 42px;
      width: auto;
      object-fit: contain;
    }
    .brand .name{
      font-family: "DM Sans", Inter, sans-serif;
      font-weight: 700;
      font-size: 16px;
      letter-spacing: .2px;
      white-space: nowrap;
      color: var(--primary-2);
    }

    nav{
      display:flex;
      gap:18px;
      align-items:center;
      justify-content:center;
      flex-wrap: wrap;
    }
    nav a{
      font-size: 14px;
      color: var(--primary-2);
      padding: 8px 10px;
      border-radius: 10px;
      font-weight: 600;
      display:inline-flex;
      align-items:center;
      gap:6px;
    }
    nav a:hover{background: var(--sky)}
    nav a.active{border-bottom: 2px solid var(--primary); border-radius: 0; padding-bottom: 6px}

    /* Mobile menu toggle */
    .mobile-menu-btn{
      display:none;
      background:none;
      border:none;
      font-size:28px;
      cursor:pointer;
      padding:4px 8px;
      color:var(--primary-2);
    }

    .btn{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      padding: 11px 16px;
      border-radius: var(--pill);
      font-weight: 700;
      border: 1px solid transparent;
      cursor:pointer;
      user-select:none;
      white-space:nowrap;
      gap: 8px;
    }
    .btn.primary{background: var(--primary); color:#fff; box-shadow: var(--shadow)}
    .btn.primary:hover{filter: brightness(.98)}
    .btn.ghost{background:#fff;border-color: var(--border); color: var(--primary-2)}
    .btn.ghost:hover{background: var(--sky)}

    /* Quote dropdowns */
    details.quoteDrop,
    details.quoteBtn{
      position: relative;
      display: inline-block;
    }
    details.quoteDrop > summary{
      list-style:none;
      cursor:pointer;
      user-select:none;
      font-size: 14px;
      color: var(--primary-2);
      padding: 8px 10px;
      border-radius: 10px;
      font-weight: 600;
      display:inline-flex;
      align-items:center;
      gap: 6px;
    }
    details.quoteDrop > summary:hover{ background: var(--sky); }
    details.quoteDrop > summary::-webkit-details-marker{ display:none; }

    details.quoteBtn > summary{
      list-style:none;
      cursor:pointer;
      user-select:none;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      padding: 11px 16px;
      border-radius: var(--pill);
      font-weight: 700;
      border: 1px solid transparent;
      background: var(--primary);
      color:#fff;
      box-shadow: var(--shadow);
      gap: 8px;
      white-space:nowrap;
    }
    details.quoteBtn > summary:hover{ filter: brightness(.98); }
    details.quoteBtn > summary::-webkit-details-marker{ display:none; }

    .qMenu{
      position: absolute;
      top: calc(100% + 10px);
      left: 0;
      min-width: 240px;
      background: #fff;
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: var(--shadow);
      padding: 6px;
      z-index: 9999;
    }
    .qMenu a{
      display:block;
      padding: 10px 12px;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      color: var(--primary-2);
      white-space:nowrap;
    }
    .qMenu a:hover{ background: var(--sky); }

    /* Right-side button dropdown should open aligned to the right */
    details.quoteBtn .qMenu{ right:0; left:auto; }

    /* HERO */
    .hero{
      background: linear-gradient(180deg, #dfeeff 0%, #f6fbff 70%, #ffffff 100%);
      padding: 34px 0 26px;
      position: relative;
      overflow: visible;
    }
    .hero::after{
      content:"";
      position:absolute;
      right:-260px;
      top: -80px;
      width: 760px;
      height: 760px;
      background: rgba(120,180,255,.18);
      border-radius: 50%;
    }
    .hero .grid{
      position: relative;
      z-index: 1;
      display:grid;
      grid-template-columns: 1fr;
      gap: 0;
      align-items:center;
      padding: 24px 0 6px;
    }
    h1{
      font-family: "DM Sans", Inter, sans-serif;
      font-size: clamp(34px, 4.2vw, 54px);
      line-height: 1.06;
      margin: 0 0 12px;
      color: var(--primary-2);
      letter-spacing: -.6px;
    }
    .lead{
      margin: 0 0 18px;
      color: #36515c;
      max-width: 70ch;
      font-size: 16px;
      font-weight: 500;
    }
    .hero-actions{display:flex; gap:12px; flex-wrap:wrap; margin-bottom: 14px}
    .chips{display:flex; gap:10px; flex-wrap:wrap}
    .chip{
      display:inline-flex; align-items:center; gap:8px;
      background:#fff;
      border:1px solid var(--border);
      border-radius: var(--pill);
      padding: 8px 12px;
      font-size: 13px;
      font-weight: 600;
      color:#36515c;
    }
    .dot{width:10px;height:10px;border-radius:50%;background:#ffd77a;border:1px solid rgba(0,0,0,.06)}

    /* Sections */
    .section{padding: 34px 0}
    .section.sky{ background: var(--sky); }
    .title{
      text-align:center;
      margin-bottom: 18px;
    }
    .title h2{
      font-family: "DM Sans", Inter, sans-serif;
      font-size: 28px;
      margin:0 0 6px;
      color: var(--primary-2);
    }
    .title p{margin:0;color:var(--muted);font-weight:500}

    /* Cards */
    .card{
      background:#fff;
      border:1px solid var(--border);
      border-radius: var(--radius);
      padding: 16px;
      box-shadow: 0 10px 22px rgba(10,35,45,.06);
    }

    /* About layout */
    .aboutGrid{
      display:grid;
      grid-template-columns: 1.1fr .9fr;
      gap: 14px;
      align-items: start;
    }
    .aboutCard h3{
      font-family: "DM Sans", Inter, sans-serif;
      margin: 0 0 8px;
      color: var(--primary-2);
      font-size: 20px;
      letter-spacing: -.2px;
    }
    .aboutCard p{margin: 0 0 10px; color: var(--muted); font-weight: 500}
    .aboutCard p:last-child{margin-bottom:0}

    .facts{
      display:grid;
      grid-template-columns: 1fr;
      gap: 10px;
    }
    .fact{
      border:1px solid var(--border);
      border-radius: 14px;
      padding: 12px 12px;
      background: #fff;
      box-shadow: 0 8px 18px rgba(10,35,45,.05);
    }
    .fact strong{display:block; color: var(--primary-2); font-weight: 900}
    .fact span{display:block; color: var(--muted); font-weight: 600; margin-top: 2px; font-size: 13px}

    /* Values tiles */
    .tiles{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 14px;
    }
    .tile{
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 18px;
      box-shadow: 0 8px 18px rgba(10,35,45,.06);
      display:flex;
      gap: 12px;
      align-items:center;
      justify-content:center;
      min-height: 86px;
      text-align:center;
      font-weight: 700;
      color: var(--primary-2);
    }
    .tile span{display:block;font-size:14px}
    .tile small{display:block;font-size:12px;color:var(--muted);font-weight:600;margin-top:4px}

    /* Team strip (simple placeholders) */
    .teamRow{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 14px;
      align-items:stretch;
    }
    .person{
      display:flex;
      gap: 12px;
      align-items:center;
    }
    .avatar{
      width: 54px; height: 54px;
      border-radius: 16px;
      background: #dfeeff;
      border: 1px solid var(--border);
      box-shadow: 0 8px 18px rgba(10,35,45,.06);
      flex: 0 0 auto;
      display:grid;
      place-items:center;
      font-weight: 900;
      color: var(--primary-2);
    }
    .pMeta strong{display:block; color: var(--primary-2)}
    .pMeta span{display:block; color: var(--muted); font-weight:600; font-size: 13px; margin-top:2px}

    /* CTA band */
    .ctaBand{
      background: linear-gradient(180deg, #ffffff 0%, #eef6ff 50%, #dfeeff 100%);
      border-top: 1px solid var(--border);
      border-bottom: 1px solid var(--border);
    }
    .ctaInner{
      max-width: 920px;
      margin: 0 auto;
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 12px;
      flex-wrap:wrap;
    }
    .ctaInner h3{
      margin:0;
      font-family:"DM Sans", Inter, sans-serif;
      color: var(--primary-2);
      font-size: 22px;
    }
    .ctaInner p{margin:4px 0 0; color: var(--muted); font-weight:600}

    /* Footer */
    footer{
      background: #0b2e3d;
      color: rgba(255,255,255,.92);
      margin-top: 18px;
    }
    .foot{
      padding: 26px 0;
      display:grid;
      grid-template-columns: 1.2fr 1fr;
      gap: 16px;
      align-items:start;
    }
    footer a{color: #cde8ff}
    .foot h4{margin:0 0 8px; font-family:"DM Sans", Inter, sans-serif}
    .foot p{margin:0; color: rgba(255,255,255,.76)}
    .bottom{
      border-top: 1px solid rgba(255,255,255,.12);
      padding: 14px 0;
      font-size: 13px;
      color: rgba(255,255,255,.72);
      display:flex;
      justify-content:space-between;
      gap: 12px;
      flex-wrap:wrap;
    }

    /* Responsive */
    @media (max-width: 980px){
      .mobile-menu-btn{display:block}
      nav{
        display:none;
        position:absolute;
        top:100%;
        left:0;
        right:0;
        background:#fff;
        border-top:1px solid var(--border);
        flex-direction:column;
        align-items:stretch;
        padding:8px;
        box-shadow:var(--shadow);
      }
      nav.show{display:flex}
      nav a{justify-content:center;padding:12px}
      details.quoteDrop{width:100%}
      details.quoteDrop > summary{justify-content:center;width:100%}
      details.quoteBtn{display:none}
      .brand .name{display:none}
      .aboutGrid{grid-template-columns: 1fr}
      .tiles{grid-template-columns: 1fr 1fr}
      .teamRow{grid-template-columns: 1fr}
    }
    @media (max-width: 560px){
      .tiles{grid-template-columns: 1fr}
      .brand img{height: 38px}
    }
  </style>
</head>

